<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
	<channel>
		<title>{blog.title}</title>
		<link><f:uri.action action="index" controller="Post" arguments="{blog: blog}" absolute="TRUE"/></link>
		<description>{blog.description}</description>
		<language>en-us</language>
		<generator>FLOW3</generator>
		<f:for each="{posts}" as="post">
			<item>
				<title>{post.title}</title>
				<link><f:uri.action action="show" controller="Post" arguments="{post: post, blog: post.blog}" absolute="TRUE"/></link>
				<description>{post.content}</description>
				<pubDate><f:format.date format='D, d m Y H:i:s e'>{post.date}</f:format.date></pubDate>
				<guid><f:uri.action action="show" controller="Post" arguments="{post: post, blog: post.blog}" absolute="TRUE"/></guid>
			</item>
		</f:for>
	</channel>
</rss>